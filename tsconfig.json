{
  "extends": "./node_modules/decentraland-ecs/types/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2020",
    "target": "ES2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build/esm",
    "noImplicitAny": true,
    "allowJs": true,
    "declaration": true,
    "paths": {
      "@dcl/ecs-scene-utils": [
        "./node_modules/@dcl/ecs-scene-utils/dist/index.d.ts"
      ]
    },
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/tests/*",
    "**/__tests__/*",
    "**/test/*",
    "**/__test__/*",
    "scene"
  ]
}
